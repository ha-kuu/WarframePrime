<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CompanionStoreFragment">

        <!-- TODO: Update blank fragment layout -->
        <Button
            android:id="@+id/warframebuttononcompanion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="90dp"
            android:text="Warframe" />

        <Button
            android:id="@+id/weaponbuttononcompanion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="150dp"
            android:layout_marginBottom="90dp"
            android:text="Weapon" />

        <Button
            android:id="@+id/applybuttononcompanion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="280dp"
            android:layout_marginBottom="90dp"
            android:text="apply" />

        <EditText
            android:id="@+id/companionnametext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="15dp"
            android:inputType="textPersonName"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120dp"
            android:text="Companion Name"
            />

        <Button
            android:id="@+id/implementbuttononcompanion"
            android:layout_width="77dp"
            android:layout_height="34dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="160dp"
            android:text="Implement"
            android:textSize="7dp"
            />

        <EditText
            android:id="@+id/companionblueprintname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="12dp"
            android:inputType="textPersonName"
            android:layout_marginRight="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="275dp"
            android:text="Blueprint"
            />
        <TextView
            android:id="@+id/companionblueprintnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="285dp"
            android:layout_marginLeft="110dp"
            android:text="Numb."
            />
        <Button
            android:id="@+id/minusblueprintoncompanion"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="275dp"
            android:layout_marginLeft="60dp"
            android:text="-" />
        <Button
            android:id="@+id/plusblueprintoncompanion"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="275dp"
            android:layout_marginLeft="160dp"
            android:text="+" />

        <EditText
            android:id="@+id/companioncarapacename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="12dp"
            android:layout_marginRight="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="350dp"
            android:text="Carapace"
            />
        <TextView
            android:id="@+id/companioncarapacenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="360dp"
            android:layout_marginLeft="110dp"
            android:text="Numb."
            />
        <Button
            android:id="@+id/minuscarapaceoncompanion"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="350dp"
            android:layout_marginLeft="60dp"
            android:text="-" />
        <Button
            android:id="@+id/pluscarapaceoncompanion"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="350dp"
            android:layout_marginLeft="160dp"
            android:text="+" />

        <EditText
            android:id="@+id/companionsystemname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="12dp"
            android:layout_marginRight="70dp"
            android:inputType="textPersonName"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="500dp"
            android:text="System"
            />
        <TextView
            android:id="@+id/companionsystemnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="510dp"
            android:layout_marginLeft="110dp"
            android:text="Numb."
            />
        <Button
            android:id="@+id/minussystemoncompanion"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="495dp"
            android:layout_marginLeft="60dp"
            android:text="-" />
        <Button
            android:id="@+id/plussystemoncompanion"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="495dp"
            android:layout_marginLeft="160dp"
            android:text="+" />

        <EditText
            android:id="@+id/companioncerebrumname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="12dp"
            android:layout_marginRight="70dp"
            android:inputType="textPersonName"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="425dp"
            android:text="Cerebrum"
            />
        <TextView
            android:id="@+id/companioncerebrumnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="435dp"
            android:layout_marginLeft="110dp"
            android:text="Numb."
            />
        <Button
            android:id="@+id/minuscerebrumcompanion"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="425dp"
            android:layout_marginLeft="60dp"
            android:text="-" />
        <Button
            android:id="@+id/pluscerebrumcompanion"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="425dp"
            android:layout_marginLeft="160dp"
            android:text="+" />


    </FrameLayout>
</layout>